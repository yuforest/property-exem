<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.number_field :rent %>円
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :remark %>
    <%= f.text_area :remark %>
  </div>
  <hr>
    <h2>最寄り駅1</h2>
    <%= f.fields_for :nearest_stations do |s| %>
      
      <%= s.label :line_name %>
      <%= s.text_field :line_name %>
      
      <%= s.label :station_name %>
      <%= s.text_field :station_name %>
      
      <%= s.label :walk_minute %>
      <%= s.number_field :walk_minute %>分
    <% end %>
    
    
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
